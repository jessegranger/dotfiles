term "screen-256color"
shell "/usr/bin/fish"

encoding UTF-8

altscreen on

attrcolor b ".I"
defbce "on"
vbell on
startup_message off
defscrollback 5000
bufferfile "$HOME/.screen/exchange"
hardcopydir "$HOME/.screen/hardcopy"
sorendition dY
hardstatus alwayslastline
hardstatus string '[%{= dW}%-Lw%{= dY}%50> %n*%f %t%{= dW}%+Lw%< %{= dW} ]'

shelltitle "> |fish"

setenv SSH_AUTH_SOCK $HOME/.ssh/ssh_auth_sock
